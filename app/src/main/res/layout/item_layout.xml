<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#B2EFB154"
    android:id="@+id/main"
    >
<androidx.cardview.widget.CardView
    android:id="@+id/center"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_110sdp"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:backgroundTint="#B2EFB154"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    >


    <LinearLayout
        android:id="@+id/packed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        android:orientation="horizontal"

        >
       <LinearLayout
           android:layout_width="@dimen/_70sdp"
           android:layout_height="@dimen/_110sdp"
           android:orientation="vertical"

           >
           <de.hdodenhof.circleimageview.CircleImageView
               xmlns:app="http://schemas.android.com/apk/res-auto"
               android:id="@+id/profile_image"
               android:layout_width="@dimen/_60sdp"
               android:layout_height="@dimen/_60sdp"
               android:src="@drawable/ic_launcher_background"
               app:civ_border_width="2dp"
               app:civ_border_color="#FF000000"
              android:layout_marginTop="@dimen/_10sdp"
               android:layout_marginRight="@dimen/_10sdp"
               android:layout_marginLeft="@dimen/_10sdp"
               />

           <TextView
               android:id="@+id/tvGander"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_30sdp"
               android:text=""
               android:textStyle="bold"
               android:gravity="center"
               android:textSize="@dimen/_20sdp"
               android:textColor="#E10D0D"
               android:layout_marginLeft="@dimen/_3ssp"

               />

       </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_110sdp"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:gravity="left|start"
            >
            <TextView
                android:id="@+id/tvName"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_20sdp"
                android:textSize="@dimen/_18ssp"
                android:layout_marginTop="@dimen/_14sdp"
                />
            <TextView
                android:id="@+id/tvBirthday"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_20sdp"
                android:textSize="@dimen/_18ssp"
                android:textColor="#11D4ED"
                android:layout_marginTop="@dimen/_14sdp"
                />
            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:textSize="@dimen/_18ssp"
                />
            

        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_90sdp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:gravity="left|start"
            >
            <TextView
                android:id="@+id/tvBlood"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:textSize="@dimen/_18ssp"
                android:textColor="#F10606"
                />
            <TextView
                android:id="@+id/tvWeight"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_20sdp"
                android:textColor="#F66538"
                android:layout_marginTop="@dimen/_24sdp"
                android:textSize="@dimen/_18ssp"
                />



        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>



</LinearLayout>